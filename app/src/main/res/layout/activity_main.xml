<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.compress.ak.compressiontest.MainActivity">

    <TextView
        android:id="@+id/action_tv_compress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compressDialog"
        android:layout_below="@+id/source_details_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="207dp" />

    <TextView
        android:id="@+id/source_details_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/destination_details_textview"
        android:layout_alignStart="@+id/destination_details_textview" />

    <TextView
        android:id="@+id/destination_details_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/source_details_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <ProgressBar
        android:id="@+id/progress_loader"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
